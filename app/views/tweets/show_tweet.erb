<h1>User Show Page</h1>

<p> <%= @tweet.content %> </p>

<form method="post" action="/tweets/<%= @tweet.id %>">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" id="submit" value="Delete Tweet">
</form>
<form method="get" action="/tweets/<%= @tweet.id %>/edit">
    <input type="submit" id="submit" value="Edit Tweet">
</form>
